<UserControl x:Class="FE.GD_ThongKe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="480" d:DesignWidth="800"
             Background="#F0F0F0">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Thanh tìm kiếm -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,20,0,10">
            <TextBlock Text="Tìm kiếm theo tháng:" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0"/>
            <ComboBox x:Name="cbThang" Width="140" Height="30" SelectedIndex="0" Margin="0,0,10,0">
                <ComboBoxItem Content="Tháng 1/2024"/>
                <ComboBoxItem Content="Tháng 2/2024"/>
                <ComboBoxItem Content="Tháng 3/2024"/>
                <ComboBoxItem Content="Tháng 4/2024"/>
            </ComboBox>
            <Button Content="Tìm kiếm" Width="100" Height="30" 
                    Background="#CD5C5C" Foreground="White" 
                    FontWeight="SemiBold" BorderThickness="0" 
                    />
        </StackPanel>

        <!-- Khu vực biểu đồ -->
        <Grid Grid.Row="2" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Biểu đồ cột -->
            <Border Grid.Column="0" Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="8" Padding="10">
                <StackPanel>
                    <TextBlock Text="Thống kê Doanh thu bán từng Sản phẩm theo tháng" 
                               FontWeight="SemiBold" FontSize="15" Margin="0,0,0,10"/>

                    <lvc:CartesianChart Series="{Binding ColumnSeries}" />
                </StackPanel>
            </Border>

            <!-- Biểu đồ tròn -->
            <Border Grid.Column="2" Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="8" Padding="10">
                <StackPanel>
                    <TextBlock Text="Thống kê % Sản phẩm bán theo doanh thu" 
                               FontWeight="SemiBold" FontSize="15" Margin="0,0,0,10"/>

                    <lvc:PieChart Series="{Binding PieSeries}" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

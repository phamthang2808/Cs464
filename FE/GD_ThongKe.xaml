<Window x:Class="FE.GD_ThongKe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FE"
        mc:Ignorable="d"
        Title="THONGKE" Height="480" Width="800"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,20,0,10">
            <TextBlock Text="Tìm kiếm theo tháng:" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0"/>
            <ComboBox Width="120" Height="28" SelectedIndex="0" Margin="0,0,10,0" BorderBrush="Gray" BorderThickness="1">
                <ComboBoxItem Content="Tháng 1/2024"/>
                <ComboBoxItem Content="Tháng 2/2024"/>
                <ComboBoxItem Content="Tháng 3/2024"/>
                <ComboBoxItem Content="Tháng 4/2024"/>
            </ComboBox>
            <Button Content="Tìm kiếm" Width="90" Height="28" Background="#CD5C5C" Foreground="White" FontWeight="SemiBold" BorderThickness="1" BorderBrush="#8B0000"/>
        </StackPanel>

        <Grid Grid.Row="2" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Thống kê Doanh thu bán từng Sản phẩm theo tháng" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10" HorizontalAlignment="Left"/>
                    <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="0.5" Background="#F8F8F8">
                        <TextBlock Text="[Vị trí biểu đồ cột]" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray" FontSize="12"/>
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Column="2" Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Thống kê % Sản phẩm bán theo doanh thu" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10" HorizontalAlignment="Left"/>
                    <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="0.5" Background="#F8F8F8">
                        <TextBlock Text="[Vị trí biểu đồ tròn]" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray" FontSize="12"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
<UserControl x:Class="FE.QL_SanPham"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:FE"
			 mc:Ignorable="d"
			 Loaded="UserControl_Loaded"
			 d:DesignHeight="700" d:DesignWidth="1000">

    <Grid Background="#F0F2F5">
        <Grid.Resources>
            <DropShadowEffect x:Key="DropShadow"
							  Color="#D3D3D3"
							  Direction="270"
							  ShadowDepth="2"
							  Opacity="0.5"
							  BlurRadius="5"/>

            <Style x:Key="InputLabelStyle" TargetType="{x:Type Label}">
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="#555"/>
            </Style>

            <Style x:Key="InputFieldStyle" TargetType="{x:Type Control}">
                <Setter Property="Height" Value="28"/>
                <Setter Property="Padding" Value="8,0,0,0"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#BDC3C7"/>
            </Style>

            <Style x:Key="ActionButton" TargetType="{x:Type Button}">
                <Setter Property="Width" Value="120"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.9"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="SubHeaderStyle" TargetType="{x:Type TextBlock}">
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="#555"/>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
				   Text="QUẢN LÝ SẢN PHẨM"
				   FontSize="28"
				   FontWeight="Bold"
				   Foreground="#2C3E50"
				   HorizontalAlignment="Center"
				   Margin="0,15,0,10"/>

        <Grid Grid.Row="1" Margin="20,0,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
					Background="#FFFFFF"
					Padding="15,10"
					CornerRadius="8"
					BorderBrush="#D9DDE3"
					BorderThickness="1"
					Effect="{StaticResource DropShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="152"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>

                    <Label Content="Mã SP" Grid.Row="0" Grid.Column="0" Style="{StaticResource InputLabelStyle}"/>
                    <TextBox x:Name="txtMaSP" Grid.Row="0" Grid.Column="1" Style="{StaticResource InputFieldStyle}"/>

                    <Label Content="Tên SP" Grid.Row="2" Grid.Column="0" Style="{StaticResource InputLabelStyle}"/>
                    <TextBox x:Name="txtTenSP" Grid.Row="2" Grid.Column="1" Style="{StaticResource InputFieldStyle}"/>

                    <Label Content="Số lượng" Grid.Row="4" Grid.Column="0" Style="{StaticResource InputLabelStyle}"/>
                    <TextBox x:Name="txtSoLuong" Grid.Row="4" Grid.Column="1" Style="{StaticResource InputFieldStyle}"/>

                    <Label Content="Đơn vị" Grid.Row="6" Grid.Column="0" Style="{StaticResource InputLabelStyle}"/>
                    <TextBox x:Name="txtDonVi" Grid.Row="6" Grid.Column="1" Style="{StaticResource InputFieldStyle}"/>

                    <Label Content="Giá" Grid.Row="8" Grid.Column="0" Style="{StaticResource InputLabelStyle}"/>
                    <TextBox x:Name="txtGia" Grid.Row="8" Grid.Column="1" Style="{StaticResource InputFieldStyle}"/>

                    <StackPanel Grid.Row="0" Grid.RowSpan="9" Grid.Column="2" VerticalAlignment="Center">
                        <Button x:Name="btnThemMoi" Content="Thêm mới" Style="{StaticResource ActionButton}" Background="#4CAF50" Margin="10,0,0,10" Click="BtnThem_Click"/>
                        <Button x:Name="btnSua" Content="Sửa" Style="{StaticResource ActionButton}" Background="#FFC107" Margin="10,0,0,10" Click="BtnSua_Click"/>
                        <Button x:Name="btnXoa" Content="Xóa" Style="{StaticResource ActionButton}" Background="#F44336" Margin="10,0,0,10" Click="BtnXoa_Click"/>
                        <Button x:Name="btnTimKiem" Content="Tìm Kiếm" Style="{StaticResource ActionButton}" Background="#2196F3" Margin="10,0,0,10" Click="BtnTimKiem_Click"/>
                        <Button x:Name="btnReset" Content="Reset" Style="{StaticResource ActionButton}" Background="#9E9E9E" Margin="10,0,0,10" Click="BtnReset_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Column="2"
					Background="#FFFFFF"
					CornerRadius="8"
					BorderBrush="#D9DDE3"
					BorderThickness="1"
					Effect="{StaticResource DropShadow}">
                <Grid>
                    <TextBlock Text="Ảnh sản phẩm"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Top"
							   FontWeight="SemiBold"
							   Margin="0,15,0,0"/>
                    <Image Stretch="Uniform"
						   Margin="12"
						   Source="/Images/Quanlysanpham.jpg"
						   VerticalAlignment="Center"
						   HorizontalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="3"
		Background="#FFFFFF"
		Margin="20,0,20,20"
		Padding="5"
		CornerRadius="8"
		BorderBrush="#D9DDE3"
		BorderThickness="1"
		Effect="{StaticResource DropShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
					Text="Danh sách sản phẩm trong Cửa hàng"
					Style="{StaticResource SubHeaderStyle}"
					FontSize="18"
					Margin="0,0,0,15"/>

                <DataGrid x:Name="dgSanPham"
					Grid.Row="1"
					AutoGenerateColumns="False"
					CanUserAddRows="False"
					IsReadOnly="True"
					HeadersVisibility="Column"
					RowHeight="35"
					FontSize="12"
					GridLinesVisibility="All"
					BorderThickness="1"
					Background="White"
					SelectionChanged="DgSanPham_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã sản phẩm" Binding="{Binding MaSanPham}" Width="1*"/>
                        <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding TenSanPham}" Width="2*"/>
                        <DataGridTextColumn Header="Số lượng" Binding="{Binding SoLuongTon}" Width="*"/>
                        <DataGridTextColumn Header="Đơn vị" Binding="{Binding DonVi}" Width="*"/>
                        <DataGridTextColumn Header="Giá" Binding="{Binding GiaBan, StringFormat={}{0:N0}}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

    </Grid>
</UserControl>
<UserControl x:Class="FE.GD_DSHoadon" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:FE"
             mc:Ignorable="d"
             Loaded="UserControl_Loaded"
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="WhiteSmoke">
    <Grid Margin="10">
        <Grid.Resources>
            <Style x:Key="ActionButton" TargetType="{x:Type Button}">
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="35"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="InputControlStyle" TargetType="{x:Type Control}">
                <Setter Property="Width" Value="250"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="BorderBrush" Value="#BDBDBD"/>
                <Setter Property="Height" Value="32"/>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="QUẢN LÝ DANH SÁCH HÓA ĐƠN" FontSize="26" FontWeight="ExtraBold" 
                   Foreground="#1976D2" HorizontalAlignment="Center" Margin="0,15,0,15"/>

        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" Margin="10,0,10,10" 
                Background="White" CornerRadius="5" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="10" Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,8">
                        <TextBlock Text="Mã hóa đơn:" Width="150" VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold" />
                        <TextBox x:Name="txtMaHoaDon" Style="{StaticResource InputControlStyle}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,8">
                        <TextBlock Text="Ngày lập:" Width="150" VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold" />
                        <DatePicker x:Name="dtpNgayLap" Style="{StaticResource InputControlStyle}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="10" Grid.Column="1">
                    <StackPanel Orientation="Horizontal" Margin="0,8">
                        <TextBlock Text="Loại hóa đơn:" Width="150" VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold" />
                        <ComboBox x:Name="cboLoaiHoaDon" Style="{StaticResource InputControlStyle}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,8">
                        <TextBlock Text="Tên đại lý:" Width="150" VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold" />
                        <ComboBox x:Name="cboTenDaiLy" Style="{StaticResource InputControlStyle}" 
                                  DisplayMemberPath="TenDaily" SelectedValuePath="MaDaily"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button x:Name="btnThem" Content="Thêm HĐ" Style="{StaticResource ActionButton}" Background="#4CAF50" Click="BtnThem_Click"/>
            <Button x:Name="btnSua" Content="Sửa HĐ" Style="{StaticResource ActionButton}" Background="#FFC107" Click="BtnSua_Click"/>
            <Button x:Name="btnXoa" Content="Xóa HĐ" Style="{StaticResource ActionButton}" Background="#F44336" Click="BtnXoa_Click"/>

            <Button x:Name="btnXemChiTiet" Content="Xem Chi Tiết" Style="{StaticResource ActionButton}" Background="#007ACC" Click="BtnXemChiTiet_Click" Width="120"/>

            <Button x:Name="btnTimKiem" Content="Tìm Kiếm" Style="{StaticResource ActionButton}" Background="#2196F3" Click="BtnTimKiem_Click" Margin="5" Height="Auto"/>
            <Button x:Name="BtnReset" Content="Reset" Style="{StaticResource ActionButton}" Background="#9E9E9E" Click="BtnReset_Click"/>
        </StackPanel>

        <GroupBox Grid.Row="3" Header="Danh Sách Hóa Đơn" Margin="10,0,10,10" Padding="5">
            <DataGrid x:Name="dgHoaDon"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      RowHeight="32"
                      CanUserAddRows="False"
                      Background="White"
                      SelectionChanged="DgHoaDon_SelectionChanged"
                      MouseDoubleClick="DgHoaDon_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã HĐ" Width="*" Binding="{Binding MaHoaDon}" />
                    <DataGridTextColumn Header="Ngày Lập" Width="*" Binding="{Binding NgayLap, StringFormat='dd/MM/yyyy'}" />
                    <DataGridTextColumn Header="Loại HĐ" Width="*" Binding="{Binding LoaiHoaDon}" />
                    <DataGridTextColumn Header="Tên Đại Lý" Width="2*" Binding="{Binding THONGTINDAILY.TenDaily}" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</UserControl>
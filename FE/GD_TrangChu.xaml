<Window x:Class="FE.GD_TrangChu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FE"
        mc:Ignorable="d"
        Title="Trang Chủ"
        Height="600" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F9">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#2D89EF" Height="50">
            <Button Content="📦 Sản phẩm"
                    Width="150" Margin="5"
                    Foreground="White" Background="#2D89EF"
                    BorderThickness="0" FontWeight="Bold"
                    Cursor="Hand"/>
            <Button Content="🛒 Hóa đơn bán"
                    Width="150" Margin="5"
                    Foreground="White" Background="#2D89EF"
                    BorderThickness="0" FontWeight="Bold"
                    Cursor="Hand"/>
            <Button Content="🧾 Hóa đơn mua"
                    Width="150" Margin="5"
                    Foreground="White" Background="#2D89EF"
                    BorderThickness="0" FontWeight="Bold"
                    Cursor="Hand"/>
            <Button Content="📊 Thống kê"
                    Width="150" Margin="5"
                    Foreground="White" Background="#2D89EF"
                    BorderThickness="0" FontWeight="Bold"
                    Cursor="Hand"/>
            <Button Content="🏢 Đại lý"
                    Width="150" Margin="5"
                    Foreground="White" Background="#2D89EF"
                    BorderThickness="0" FontWeight="Bold"
                    Cursor="Hand"/>
        </StackPanel>

        <Border Margin="10" CornerRadius="8" Background="White" Padding="15"
                BorderBrush="#D9D9D9" BorderThickness="1">
            <ContentControl x:Name="MainContent"/>
        </Border>
    </DockPanel>
</Window>


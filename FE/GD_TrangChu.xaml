<Window x:Class="FE.GD_TrangChu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FE"
        mc:Ignorable="d"
        Title="Trang Chủ"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F9">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#2D89EF" Height="50">
            <Button x:Name="btnTrangChu"
                    Content="🏠 Trang chủ"
                    Width="180" Margin="5"
                    Foreground="White" Background="#2D89EF"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Btn_TrangChu_Click" FontSize="14" FontWeight="Bold"/>

            <Button x:Name="btnSanPham"
                    Content="📦 Sản phẩm"
                    Width="180" Margin="5"
                    Foreground="White" Background="#2D89EF"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Btn_SanPham_Click" FontSize="14" FontWeight="Bold"/>

            <Button x:Name="btnHoaDon"
                    Content="📑 Quản lý hóa đơn"
                    Width="180" Margin="5"
                    Foreground="White" Background="#2D89EF"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnHoaDon_Click" FontSize="14" FontWeight="Bold"/>

            <Button x:Name="btnThongKe"
                    Content="📊 Thống kê"
                    Width="180" Margin="5"
                    Foreground="White" Background="#2D89EF"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Btn_ThongKe_Click" FontSize="14" FontWeight="Bold"/>

            <Button x:Name="btnDaiLy"
                    Content="🏢 Đại lý"
                    Width="180" Margin="5"
                    Foreground="White" Background="#2D89EF"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Btn_DaiLy_Click" FontSize="14" FontWeight="Bold"/>
        </StackPanel>

        <Border Margin="10" CornerRadius="8" Background="White" Padding="15"
                BorderBrush="#D9D9D9" BorderThickness="1">
            <ContentControl x:Name="MainContent"/>
        </Border>
    </DockPanel>
</Window>

<Window x:Class="FE.GD_HoaDonBanHang"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FE"
        mc:Ignorable="d"
        Title="Hóa Đơn Bán Hàng" Height="480" Width="800"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="HÓA ĐƠN BÁN HÀNG"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#000080"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,10"/>

        <Border Grid.Row="1"
                Background="#FAFAD2"
                CornerRadius="5"
                Margin="20,0,20,10"
                BorderBrush="LightGray"
                BorderThickness="1">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Mã hóa đơn" Grid.Row="0" Grid.Column="0" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Height="25" Width="180" HorizontalAlignment="Left" Margin="0,0,0,0" BorderBrush="Gray" BorderThickness="1"/>

                <Label Content="Tên cửa hàng" Grid.Row="2" Grid.Column="0" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" Height="25" Width="180" HorizontalAlignment="Left" Margin="0,0,0,0" BorderBrush="Gray" BorderThickness="1"/>

                <Label Content="Ngày nhập" Grid.Row="4" Grid.Column="0" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <DatePicker Grid.Row="4" Grid.Column="1" Height="25" Width="180" HorizontalAlignment="Left" Margin="0,0,0,0" SelectedDate="2018-04-12" BorderBrush="Gray" BorderThickness="1"/>

                <Label Content="Tổng tiền" Grid.Row="6" Grid.Column="0" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBox Grid.Row="6" Grid.Column="1" Height="25" Width="180" HorizontalAlignment="Left" Margin="0,0,0,0" BorderBrush="Gray" BorderThickness="1"/>

                <Label Content="Mã khách hàng" Grid.Row="0" Grid.Column="3" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="4" Height="25" Width="180" HorizontalAlignment="Left" Margin="0,0,0,0" BorderBrush="Gray" BorderThickness="1"/>

                <Label Content="Tên khách hàng" Grid.Row="2" Grid.Column="3" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="4" Height="25" Width="180" HorizontalAlignment="Left" Margin="0,0,0,0" BorderBrush="Gray" BorderThickness="1"/>

                <Label Content="Tổng nợ" Grid.Row="4" Grid.Column="3" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="4" Height="25" Width="180" HorizontalAlignment="Left" Margin="0,0,0,0" BorderBrush="Gray" BorderThickness="1"/>

                <StackPanel Orientation="Horizontal" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="5" HorizontalAlignment="Center" Margin="0,0,0,0">
                    <Button Content="Thêm" Width="80" Height="30" Margin="10,0" Background="#DDDDDD" BorderBrush="Gray" BorderThickness="1"/>
                    <Button Content="Xóa" Width="80" Height="30" Margin="10,0" Background="#DDDDDD" BorderBrush="Gray" BorderThickness="1"/>
                    <Button Content="Sửa" Width="80" Height="30" Margin="10,0" Background="#DDDDDD" BorderBrush="Gray" BorderThickness="1"/>
                    <Button Content="Thoát" Width="80" Height="30" Margin="10,0" Background="#DDDDDD" BorderBrush="Gray" BorderThickness="1"/>
                </StackPanel>

                <TextBlock Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="5"
                           Text="Danh sách hóa đơn bán hàng"
                           FontWeight="SemiBold"
                           Margin="0,15,0,5"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"/>

                <Border Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="5"
                        BorderBrush="Gray" BorderThickness="1"
                        CornerRadius="2"
                        Background="White"
                        Height="100"
                        VerticalAlignment="Stretch">
                    <ListView Background="White" BorderThickness="0">
                    </ListView>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
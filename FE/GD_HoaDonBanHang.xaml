<UserControl x:Class="FE.GD_HoaDonBanHang"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:FE"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Background="#F0F0F0">
        <Grid.Resources>
            <Style x:Key="InputFieldStyle" TargetType="{x:Type Control}">
                <Setter Property="Height" Value="25"/>
                <Setter Property="Padding" Value="5,0"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="Gray"/>
            </Style>

            <Style x:Key="ActionButton" TargetType="{x:Type Button}">
                <Setter Property="Width" Value="80"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Margin" Value="10,0"/>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="HÓA ĐƠN BÁN HÀNG"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#000080"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,10"/>

            <Border Grid.Row="1"
                    Background="#FAFAD2"
                    CornerRadius="5"
                    Margin="20,0,20,10"
                    BorderBrush="LightGray"
                    BorderThickness="1">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Mã hóa đơn" Grid.Row="0" Grid.Column="0" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource InputFieldStyle}"/>

                    <Label Content="Tên cửa hàng" Grid.Row="2" Grid.Column="0" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource InputFieldStyle}"/>

                    <Label Content="Ngày nhập" Grid.Row="4" Grid.Column="0" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <DatePicker Grid.Row="4" Grid.Column="1" Style="{StaticResource InputFieldStyle}" SelectedDate="2018-04-12"/>

                    <Label Content="Tổng tiền" Grid.Row="6" Grid.Column="0" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="6" Grid.Column="1" Style="{StaticResource InputFieldStyle}"/>

                    <Label Content="Mã khách hàng" Grid.Row="0" Grid.Column="3" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="4" Style="{StaticResource InputFieldStyle}"/>

                    <Label Content="Tên khách hàng" Grid.Row="2" Grid.Column="3" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="4" Style="{StaticResource InputFieldStyle}"/>

                    <Label Content="Tổng nợ" Grid.Row="4" Grid.Column="3" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="4" Grid.Column="4" Style="{StaticResource InputFieldStyle}"/>

                    <StackPanel Orientation="Horizontal" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="5" HorizontalAlignment="Center" Margin="0,15,0,0">
                        <Button Content="Thêm" Style="{StaticResource ActionButton}" Background="#4CAF50"/>
                        <Button Content="Xóa" Style="{StaticResource ActionButton}" Background="#F44336"/>
                        <Button Content="Sửa" Style="{StaticResource ActionButton}" Background="#FFC107"/>
                        <Button Content="Thoát" Style="{StaticResource ActionButton}" Background="#9E9E9E"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="5"
                Margin="20,0,20,20"
                BorderBrush="LightGray"
                BorderThickness="1">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Danh sách hóa đơn bán hàng"
                           FontWeight="SemiBold"
                           Foreground="#555"
                           Margin="0,0,0,10"/>

                <DataGrid Grid.Row="1"
                          x:Name="dgHoaDonBanHang"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          Background="Transparent"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã hóa đơn" Width="*" Binding="{Binding MaHoaDon}"/>
                        <DataGridTextColumn Header="Tên cửa hàng" Width="2*" Binding="{Binding TenCuaHang}"/>
                        <DataGridTextColumn Header="Ngày nhập" Width="1.5*" Binding="{Binding NgayNhap, StringFormat='dd/MM/yyyy'}"/>
                        <DataGridTextColumn Header="Tổng tiền" Width="*" Binding="{Binding TongTien, StringFormat={}{0:N0}}"/>
                        <DataGridTextColumn Header="Mã khách hàng" Width="1.5*" Binding="{Binding MaKhachHang}"/>
                        <DataGridTextColumn Header="Tên khách hàng" Width="2*" Binding="{Binding TenKhachHang}"/>
                        <DataGridTextColumn Header="Tổng nợ" Width="*" Binding="{Binding TongNo, StringFormat={}{0:N0}}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
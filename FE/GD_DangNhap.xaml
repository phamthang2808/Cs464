<Window x:Class="FE.GiaoDienDangNhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FE"
        mc:Ignorable="d"
        Title="Đăng Nhập" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Grid>

        <Image Source="/Images/dangnhap.png" 
               Stretch="UniformToFill" 
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Opacity="0.9"/>

        <Border HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Background="#FFFFFF"  
                Padding="40"
                CornerRadius="10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="ĐĂNG NHẬP"
                           FontWeight="Bold"
                           FontSize="24"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"
                           Grid.Row="0"
                           Foreground="#333333" FontFamily="Segoe UI Black"/>

                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Tên đăng nhập"
                               Width="95"
                               VerticalAlignment="Center"
                               Foreground="#666666" FontWeight="Bold" FontFamily="Segoe UI Black"/>
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="5">
                        <Grid>
                            <TextBox x:Name="txtTenDangNhap"
                                     Width="230"
                                     Height="30"
                                     VerticalContentAlignment="Center"
                                     BorderBrush="Transparent"
                                     Background="Transparent" HorizontalAlignment="Left"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Mật khẩu"
                               Width="95"
                               VerticalAlignment="Center"
                               FontSize="13"
                               Foreground="#666666" FontFamily="Segoe UI Black" FontWeight="Bold"/>
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="5">
                        <Grid x:Name="passwordGrid">
                            <PasswordBox x:Name="txtMatKhau"
                                         Width="195"
                                         Height="30"
                                         VerticalContentAlignment="Center"
                                         BorderBrush="Transparent"
                                         Background="Transparent"
                                         HorizontalAlignment="Left"
                                         />

                            <TextBox x:Name="txtHienThiMatKhau"
                                     Width="195"
                                     Height="30"
                                     VerticalContentAlignment="Center"
                                     BorderBrush="Transparent"
                                     Background="Transparent"
                                     HorizontalAlignment="Left"
                                     Visibility="Collapsed"/>

                            <Button Content="👁"
                                    Width="30"
                                    Height="30"
                                    Margin="200,0,0,0"
                                    HorizontalAlignment="Left"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Click="Btn_HienMk"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="3" Margin="0,30,0,0" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Đăng Nhập"
                                Width="120" Height="40"
                                Margin="5"
                                Background="#007ACC"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Click="Btn_DangNhap"/>
                        <Button Content="Đăng Ký"
                                Width="120" Height="40"
                                Margin="5"
                                Background="#007ACC"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Click="Btn_DangKy"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
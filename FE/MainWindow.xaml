<Window x:Class="FE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FE"
        mc:Ignorable="d"
        Title="Quản lý sản phẩm" Height="450" Width="800">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="SẢN PHẨM QUẦN ÁO TRONG CỬA HÀNG" FontWeight="Bold">
                <Grid Margin="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="140"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Mã SP" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtMaSP" Grid.Row="0" Grid.Column="1" Height="28" Margin="0,0,10,0"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="Tên SP" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtTenSP" Grid.Row="2" Grid.Column="1" Height="28" Margin="0,0,10,0"/>

                    <Label Grid.Row="4" Grid.Column="0" Content="Số lượng" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtSoLuong" Grid.Row="4" Grid.Column="1" Height="28" Margin="0,0,10,0"/>

                    <Label Grid.Row="6" Grid.Column="0" Content="Đơn vị" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtDonVi" Grid.Row="6" Grid.Column="1" Height="28" Margin="0,0,10,0"/>

                    <Label Grid.Row="8" Grid.Column="0" Content="Giá" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtGia" Grid.Row="8" Grid.Column="1" Height="28" Margin="0,0,10,0"/>

                    <StackPanel Grid.Row="0" Grid.RowSpan="9" Grid.Column="2" Margin="8,0,0,0" VerticalAlignment="Top">
                        <Button x:Name="btnThemMoi" Content="Thêm mới" Height="32" Margin="0,0,0,10" Click="btnThemMoi_Click"/>
                        <Button x:Name="btnCapNhat" Content="Cập nhật" Height="32" Margin="0,0,0,10" Click="btnCapNhat_Click"/>
                        <Button x:Name="btnXoa"      Content="Xóa"       Height="32" Margin="0,0,0,10" Click="btnXoa_Click"/>
                        <Button x:Name="btnThoat"    Content="Thoát"     Height="32" Click="btnThoat_Click"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <Border Grid.Column="2" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                <Grid>
                    <Image Stretch="Uniform"
                           Margin="12"
                           Source="Assets/hyperlife.png"/>
                </Grid>
            </Border>
        </Grid>

        <TextBlock Grid.Row="2" Text="Danh sách sản phẩm trong Cửa hàng"
                   FontWeight="SemiBold" Margin="0,0,0,6" />

        <DataGrid x:Name="dgSanPham" Grid.Row="2" Margin="0,24,0,0"
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  HeadersVisibility="Column" IsReadOnly="True"
                  RowHeight="28" GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="MaSanPham" Binding="{Binding MaSanPham}" Width="*"/>
                <DataGridTextColumn Header="TenSanPham" Binding="{Binding TenSanPham}" Width="*"/>
                <DataGridTextColumn Header="SoLuong" Binding="{Binding SoLuong}" Width="*"/>
                <DataGridTextColumn Header="DonVi"   Binding="{Binding DonVi}"   Width="*"/>
                <DataGridTextColumn Header="Gia"     Binding="{Binding Gia, StringFormat={}{0:N0}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

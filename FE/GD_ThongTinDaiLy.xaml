<Window x:Class="FE.GiaodienDaiLy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FE"
        mc:Ignorable="d"
        Title="THÔNG TIN ĐẠI LÍ" Height="450" Width="800">
    <Grid Background="WhiteSmoke" Margin="10">

        <TextBlock Text="THÔNG TIN ĐẠI LÍ" FontSize="24" FontWeight="Bold" Foreground="Blue" HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <Border BorderBrush="Gray" BorderThickness="1" Margin="10,50,10,170" Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Margin="20" VerticalAlignment="Center" Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Mã đại lí:" Width="100" VerticalAlignment="Center" />
                        <TextBox Width="200" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Tên đại lí:" Width="100" VerticalAlignment="Center" />
                        <TextBox Width="200" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Địa chỉ:" Width="100" VerticalAlignment="Center" />
                        <TextBox Width="200" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Số điện thoại:" Width="100" VerticalAlignment="Center" />
                        <TextBox Width="200" />
                    </StackPanel>
                </StackPanel>


                <Border Grid.Column="1" Background="LightYellow" Margin="10" BorderBrush="LightGray" BorderThickness="1">
                    <Image Stretch="Uniform" />
                </Border>
            </Grid>
        </Border>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,330,0,0" >
            <Button Content="Thêm" Width="80" Height="30" Background="#FFF9F1D1"/>
            <Button Content="Cập nhật" Width="80" Height="30" Background="#FFF9F1D1"/>
            <Button Content="Xóa" Width="80" Height="30" Background="#FFF9F1D1"/>
            <Button Content="Thoát" Width="80" Height="30" Background="#FFF9F1D1"/>
        </StackPanel>

        <GroupBox Header="Danh Sách Đại Lí" Margin="10,370,10,10">
            <ListView Name="lvDaiLy">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Mã" Width="100" />
                        <GridViewColumn Header="Tên đại lí" Width="200" />
                        <GridViewColumn Header="Địa chỉ" Width="200" />
                        <GridViewColumn Header="SĐT" Width="150" />
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
    </Grid>
</Window>
